<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<nav class="navbar navbar-default">
    <div class="container-fluid ">
        <div class="navbar-header">
            <div class="row">
                <a class="btn btn-success ml-3" href="/logout">Logout</a>
                <a class="btn btn-success ml-3" href="/review">New Review</a>
                <a class="btn btn-success ml-3" href="/zipcodes">Search ZipCodes</a>
                <a class="btn btn-success ml-3" href="/user">My Reviews</a>
            </div>
        </div>
        <div class="col-md-12 text-center">
            <h1 >Greener Grass</h1>
        </div>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h3>Welcome <span class="member-name"></span></h2>
        </div>
    </div>
</div>
<div class="container blog">
    <div class="row">
        <div class="col-md-12 blog-container">
            <h2>Reviews:</h2>
            {{#each review}} <div class="card aos-init aos-animate" data-aos="fade-right" data-aos-duration="1000"
                data-aos-once="false" data-aos-easing="ease-in-out" data-aos-delay="75" data-aos-offset="200"
                data-review={{id}}>
                <div class="card-header bg-success">
                    <h2>{{ title }}<h5>{{createdAt}}</h5>
                        {{!-- September 18th 2020, 11:25:51 am --}}
                        <h5>{{ ZipCode.City }}, {{ ZipCode.State }}</h5>
                    </h2><a href="/zipcodes/{{ZipCode.Zip}}" style="color: yellow;">ZipCode: {{ ZipCode.Zip }}</a>
                </div>
                <div class="card-body">
                    <p>{{ body }}</p>
                </div>
            </div>


            {{/each}}
            {{#each nothing }}
            <h2>No reviews yet, navigate <a href='/review'>here</a> in order to get started.</h2>
            {{/each}}
        </div>
    </div>
</div>
<script src="/js/members.js" type="text/javascript"></script>
<script>
    AOS.init();
</script>